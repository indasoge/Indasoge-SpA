<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="smartanalytics.iframe">
        <iframe t-if="url and isFullScreen == false"
                t-att-src="url"
                t-attf-height="{{height}}px"
                t-attf-width="{{width}}px"
                style="text-align: center; align-items: center; justify-content: center; margin: 0 auto; display: block; overflow-x: hidden;"
                marginwidth="0"
                marginheight="0"
                scrolling="no"
                frameborder="0"/>
        <iframe t-if="url and isFullScreen != false"
                t-att-src="url"
                height="100%"
                width="100%"
                marginwidth="0"
                marginheight="0"
                scrolling="no"
                frameborder="0"/>
    </t>

</templates>
